
<hr>

<br>
<div class="row">
  <div class="col-md-6">
    <% if @photos.present? %>
      <% @photos.each_with_index do |p, index| %>
        <% if index == 0 %>
          <%= image_tag p.image.medium.url %>
        <% else %>
          <%= image_tag p.image.thumb.url %>
        <% end %>
      <% end %>
    <% else %>
      <h4>#</h4>
    <% end %>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>第<%= @exam.id %>题</th>
        <th>题目：<%= @exam.question%></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= @exam.name %>
        </td>
         <td>
           选项：
           <br>
           <%= simple_form_for @choice do |f| %>
           <%= f.input :A, label: "A." %> <%= @exam.answer_1 %>
           <br>
           <%= f.input :B, label: "B." %> <%= @exam.answer_2 %>

         </td>
       </tr>
     </tbody>
   </table>

   <%= f.submit "确定", class: "btn btn-info btn-danger", data: {disable_with: "Submitting..."} %>

<% end %>
   <div class="button">
        <%= link_to("查看答案", check_answer_exam_path(@exam), class: "buy btn btn-block ",  :method => :post) %>
   </div>
